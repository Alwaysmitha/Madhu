package Week1.day1;

public class Mobile {
	
	public void makeCall() {
		String mobileModel ="Apple 11";
		float mobileWeight = 100f;
		System.out.println("MobileModel:"+mobileModel+" , mobileWeight: "+mobileWeight );
	}
	
	public void sendMsg() {
		boolean fullCharged =true;
		int mobileCost = 75000;
		System.out.println("Ischarged:"+fullCharged+" , Price: "+mobileCost );
	}
	
	public static void main(String[] args) {
		Mobile obj= new Mobile();
		System.out.println("This is my mobile");
		obj.makeCall();
		obj.sendMsg();
		

	}

}
